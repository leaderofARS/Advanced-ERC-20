{
  "name": "Advanced-ERC-20",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "setup": "node setup-fullstack.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:hardhat\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:hardhat": "npx hardhat node",
    "dev:services": "docker-compose up -d postgres redis",
    "build": "npm run build:contracts && npm run build:frontend",
    "build:all": "npm run build:contracts && npm run build:backend && npm run build:frontend",
    "build:contracts": "hardhat compile",
    "build:backend": "cd backend && npm install && npm run build",
    "build:frontend": "cd frontend && npm install && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start",
    "start:frontend": "cd frontend && npm run start",
    "test": "npm run test:contracts && npm run test:backend",
    "test:contracts": "hardhat test",
    "test:backend": "cd backend && npm run test",
    "test:integration": "node test-integration.js",
    "deploy:local": "hardhat ignition deploy ignition/modules/AdvancedERC20.ts --network localhost",
    "deploy:testnet": "hardhat ignition deploy ignition/modules/AdvancedERC20.ts --network sepolia",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:generate": "cd backend && npx prisma generate",
    "db:studio": "cd backend && npx prisma studio",
    "db:seed": "cd backend && npm run db:seed",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "clean": "rm -rf frontend/.next frontend/out backend/dist node_modules/*/node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.4",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.1",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.0",
    "chai": "^5.3.3",
    "ethers": "^6.15.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.11",
    "http-server": "^14.1.1",
    "mocha": "^11.7.4",
    "typescript": "~5.8.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
